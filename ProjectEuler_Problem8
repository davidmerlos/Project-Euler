#The four adjacent digits in the 1000-digit number that have the greatest product are 9 × 9 × 8 × 9 = 5832.
#
#Find the thirteen adjacent digits in the 1000-digit number that have the greatest product. What is the value of this product?

d = ""
d_list_string = []
d_list_integers = []
k = 0
Product_list = []
list1 = []


for letter in d:  
    d_list_string.append(letter)  #cada character pasa a ser un elemento en una lista

for element in d_list_string:
    d_list_integers.append(int(element)) #convertimos los elementos de la lista en int (para poder operar con ellos)

for k in range(0,len(d_list_integers)-12):

    product = (d_list_integers[0+k] * d_list_integers[1+k] * d_list_integers[2+k] * d_list_integers[3+k] * d_list_integers[4+k] * d_list_integers[5+k] * d_list_integers[6+k] * d_list_integers[7+k] * d_list_integers[8+k] * d_list_integers[9+k] * d_list_integers[10+k] * d_list_integers[11+k] * d_list_integers[12+k])

    Product_list.append(product)

    k = k + 1

print(d_list_integers)
print(Product_list)
print(max(Product_list))
